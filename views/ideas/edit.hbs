{{> _bodyheader }}

<div class="container">
    <form action="/ideas/edit/{{idea._id}}?_method=PUT" method="POST" >
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{idea.title}}">
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea type="text" class="form-control" id="details" name="details">{{idea.details}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>